                    <DataGridTextColumn Width="90*" Header="Dispositivo" Binding="{Binding nombre_dispositivo}"></DataGridTextColumn>
                    <DataGridTextColumn Width="90*" Header="Cliente" Binding="{Binding nombre_cliente}"></DataGridTextColumn>
                    <DataGridTextColumn Width="100" Header="Capacidad" Binding="{Binding capacidad_string}"></DataGridTextColumn>
                    
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right"/>
