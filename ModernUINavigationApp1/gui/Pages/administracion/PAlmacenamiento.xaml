    <Grid Style="{StaticResource ContentRoot}" Margin="0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
            <TextBlock Text="Dispositivos de Almacenamiento" Style="{StaticResource Heading2}" Margin="0,0,0,8" />
